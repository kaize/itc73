.page-header
  %h1= t('.index_header')

%table{:class => "table table-striped"}
  - if !signed_in?
    .pagination-centered
      %h5
        = t('.need_authorization')
        = link_to t('.authorization'), new_user_session_path
        = t('.slash')
        = link_to t('.registration'), new_user_path

  - @course.each do |n|
    %tr
      %td 
        = link_to n.name, course_path(n), class: 'btn btn-link'
      %td
        - if signed_in?
          - if current_user.courses.include?(n)
            = simple_form_for n, url: unscribe_course_user_path do |f|
              = f.input :course_id, :as => :hidden, input_html: {value: n.id }
              = f.button :submit, value: t('.unscribe'),  class: 'btn btn-danger pull-right', :confirm => t(".unscribe_confirm")
          - else
            = simple_form_for n, url: scribe_course_user_path do |f|
              = f.input :course_id, :as => :hidden, input_html: {value: n.id }
              = f.button :submit, value: t('.scribe'),  class: 'btn btn-info pull-right', :confirm => t(".scribe_confirm")
        - else 
          = link_to t('.scribe'), '#', class: 'btn btn-info pull-right disabled'

.pagination
  = paginate @course
.page-header
  %h1= t('.own_courses') 

%table{:class => "table table-striped"}
  - @courses.each do |c|
    - if c.visible?
      %tr
        %td 
          = link_to c.name, course_path(c), class: 'btn btn-link'
        %td
          - attrs = form_attributes(c)
          = simple_form_for c, url: attrs[:path] do |f|
            = f.input :id, :as => :hidden
            = f.button :submit, value: t(".#{attrs[:action]}"),  class: attrs[:style], :confirm => t(".#{attrs[:action]}_confirm")

.pagination
  = paginate @courses

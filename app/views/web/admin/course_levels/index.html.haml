%h4= t('.list')
%table.table.table-striped
  %thead
    %tr
      %th= Course::Level.human_attribute_name :name

  %tbody.sortable{:"data-update-url" => mass_update_order_api_course_levels_path}
    - @levels.each do |n|
      %tr{:"data-id" => n.id}
        %td= n.name
        %td
          .pull-right.btn-group
            = link_to edit_admin_course_level_path(n), 
              title: t('.title_edit'),
              class: 'btn btn-mini' do
              %i.icon-pencil
            = link_to admin_course_level_path(n), method: :delete,
              class: 'btn btn-mini',
              data: { confirm: t('.delete_confirm') } do
              %i.icon-trash

.pagination
  = paginate @levels

= render 'sidebar'

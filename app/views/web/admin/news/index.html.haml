%h4= t('.list')
%table.table.table-striped
  %thead
    %tr
      %th= sort_link @q, :name
      %th= sort_link @q, :published_at
      %th= sort_link @q, :state

  %tbody
  - @news.each do |n|
    %tr
      %td= n.name
      %td= l n.published_at, format: :short
      %td= n.human_state_name
      %td
        .pull-right.btn-group
          = link_to edit_admin_news_path(n), 
            title: t('.title_edit'),
            class: 'btn btn-mini' do
            %i.icon-pencil
          = link_to admin_news_path(n), method: :delete,
            title: t('.delete'),
            class: 'btn btn-mini',
            data: { confirm: t('.delete_confirm') } do
            %i.icon-trash

.pagination
  = paginate @news

= render 'sidebar'

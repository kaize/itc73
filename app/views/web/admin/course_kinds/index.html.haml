%table.table.table-striped
  %thead
    %tr
      %th= Course::Kind.human_attribute_name :name

  %tbody.sortable{:"data-update-url" => mass_update_order_api_course_kinds_path}
    - @kinds.each do |n|
      %tr{:"data-id" => n.id}
        %td= n.name
        %td
          .pull-right.btn-group
            = link_to edit_admin_course_kind_path(n), class: 'btn btn-mini' do
              %i.icon-pencil
              = t(:edit)
            = link_to admin_course_kind_path(n), method: :delete,
              class: 'btn btn-mini',
              data: { confirm: t('.delete_confirm') } do
              %i.icon-trash

.pagination
  = paginate @kinds

= render 'sidebar'

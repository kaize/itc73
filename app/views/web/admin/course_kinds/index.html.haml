%table.table.table-striped
  %thead
    %tr
      %th= sort_link @q, :name

  %tbody
  - @kinds.each do |n|
    %tr
      %td= n.name
      %td
        .pull-right
          = link_to edit_admin_course_kind_path(n), class: 'btn btn-mini btn-primary' do
            %i.icon-pencil
          = link_to admin_course_kind_path(n), method: :delete,
            class: 'btn btn-mini btn-danger',
            data: { confirm: t('.delete_confirm') } do
            %i.icon-trash

.pagination
  = paginate @kinds

= render 'sidebar'

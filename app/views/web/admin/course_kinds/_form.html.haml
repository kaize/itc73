= simple_form_for @kind, url: url do |f|
  = f.input :name, input_html: { class: 'input-xxlarge' }
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('.cancel'), admin_course_kinds_path, class: 'btn'
    - if @kind.can_destroy?
      = link_to t('.delete'), admin_course_kind_path(@kind), method: :delete,
        class: 'btn btn-danger pull-right',
        data: { confirm: t('.delete_confirm') }

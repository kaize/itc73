- content_for :sidebar do
  %p
    = link_to new_admin_page_path, class: 'btn btn-block btn-success' do
      %i.icon-plus
      = t('.new_page')
  .well
    %ul.nav.nav-list
      %li.nav-header= t('.edit_page')
      - system_pages.each do |page|
        %li= link_to_unless_current page.name, edit_admin_page_path(page)


- course_kinds.each do |kind|
  .well.sidebar-nav
    %ul.nav.nav-list
      %li.nav-header
        %h4= kind
      %li.divider
      - levels_for_kind(kind).each do |level|
        - if header_needed?(level)
          %li.nav-header= level.name
        - level.courses.each do |c|
          - if c.published? && c.allowed? 
            - if item_needed?(c, level)
              %li{class: "#{'active' if c == @course}"}= link_to c.name, course_path(c)

